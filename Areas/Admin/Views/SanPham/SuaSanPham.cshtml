@model DoAnWebbb.Models.SANPHAM

@{
    ViewBag.Title = "Cập Nhật Thông Tin Sản Phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutHomeAdmin.cshtml";
}

<div class="box">

    <h2 style="text-align:center; color: black; margin-top:10px">Cập Nhật Thông Tin Sản Phẩm</h2>
    <div class="box-body">

        @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "themsanpham" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal container">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="col-md-10">
                        <strong style="color:black">Tên Sản Phẩm</strong>
                        @Html.EditorFor(model => model.TENSANPHAM, new { htmlAttributes = new { @class = "form-control", id = "name" } })
                        @Html.ValidationMessageFor(model => model.TENSANPHAM, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <strong style="color:black">Thông Số Kỹ Thuật</strong>
                        <textarea name="Thongso">@Model.THONGSOKYTHUAT</textarea>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <strong style="color:black">Hình Sản Phẩm</strong>
                        <input type="file" name="fileupload" style="margin-left: 16px" />
                        @*Thông báo trùng*@
                        @ViewBag.ThongBao
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <strong style="color:black">Giá Gốc</strong>
                        @*@Html.EditorFor(model => model.GIABAN, new { htmlAttributes = new { @class = "form-control" } })*@
                        <input class="form-control" value="@String.Format("{0:0,0}", Model.GIABAN)"/>
                        @Html.ValidationMessageFor(model => model.GIABAN, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <strong style="color:black">Giá Giảm</strong>
                        <input class="form-control" value="@String.Format("{0:0,0}", Model.GIAGIAM)" />
                        @Html.ValidationMessageFor(model => model.GIAGIAM, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <strong style="color:black">Hãng Máy</strong>
                        @Html.DropDownList("MaNCC", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <strong style="color:black">Loại Sản Phẩm</strong>
                        @Html.DropDownList("MALOAI", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input id="check-click" type="submit" value="Cập nhật" class="tao tao-quyen" />
                    </div>
                </div>
            </div>
        }
        <div>
            <a class="btn btn-primary" style="margin-left:84px; margin-bottom:5px" href="@Url.Action("Index")">Quay về</a>
        </div>
    </div>
</div>