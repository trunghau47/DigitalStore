@using DoAnWebbb.Models
@using PagedList.Mvc;
@model PagedList.PagedList<DoAnWebbb.Models.QUYEN>

@{
    ViewBag.Title = "Thông Tin Phân Quyền";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutHomeAdmin.cshtml";
}

<div>
    <div class="box">
        <h2 style="text-align:center; color: black; margin-top:10px">Phân Quyền</h2>
        <p>
            <a class="btn btn-primary" href="@Url.Action("TaoQuyen")" style=" margin-left: 16px">Thêm quyền</a>
        </p>
        <!-- /.box-header -->
        <div class="box-body">
            <table id="example1" class="table table-bordered table-hover">
                <thead style="color:black; text-align:center">
                    <tr>
                        <th>
                            Tên Quyền
                        </th>
                        <th>
                            Thao Tác
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr style="color:black">
                            <td>
                                @Html.DisplayFor(modelItem => item.TENQUYEN)
                            </td>
                            <td>
                                <a class="btn btn-primary" style="font-size: 10px; margin-top: 5px" href="@Url.Action("Edit", new { id=item.MAQUYEN })"><i class="fa fa-fw  fa-pen"></i></a>
                                <a class="btn btn-danger" style="font-size:10px; margin-top:5px" href="@Url.Action("Delete", new { id=item.MAQUYEN })"><i class="fa fa-fw fa-trash"></i></a>
                                <a class="btn btn-success modalLin" style="font-size: 10px; margin-top: 5px" href="@Url.Action("Detail", new { id=item.MAQUYEN })"><i class="fa fa-fw fa-list"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.box-body -->
    </div>
</div>