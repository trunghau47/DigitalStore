@model DoAnWebbb.Models.QUYEN

@{
    ViewBag.Title = "Thêm Quyền Mới";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutHomeAdmin.cshtml";
}
<div>
    <div class="box">
        <h2 style="text-align:center; color: black; margin-top:10px">Thêm Quyền Tài Khoản</h2>

        <div class="box-body container">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <div class="col-md-10">
                            <strong style="color:black">Mã Quyền</strong>
                            @Html.EditorFor(model => model.MAQUYEN, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MAQUYEN, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-10">
                            <strong style="color:black">Tên Quyền</strong>
                            @Html.EditorFor(model => model.TENQUYEN, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TENQUYEN, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input id="check-click" type="submit" value="Tạo" class="tao tao-quyen" />
                        </div>
                    </div>
                </div>
            }
            <div>
                <a class="btn btn-primary" href="@Url.Action("Index")" style="margin-left:10px">Quay về</a>
            </div>
        </div>
    </div>
</div>